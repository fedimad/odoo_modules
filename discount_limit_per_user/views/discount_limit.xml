<?xml version="1.0" encoding="utf-8"?>
<odoo>




        <!-- ******* workshop OR operations ******* -->
        <record id="view_discount_limit_tree" model="ir.ui.view">
            <field name="name">discount.limit.tree</field>
            <field name="model">discount.limit</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Remise" editable="bottom" sample="1">
                    <field name="allowed_discount" />
                    <field name="user_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="action_discount_limit" model="ir.actions.act_window">
            <field name="name">Discount Limit</field>
            <field name="res_model">discount.limit</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new record to manage user's limit Discount
              </p><p>
                Odoo vous aide à facilement suivre toutes les activités liées à une opération.
              </p>
            </field>
        </record>


        <menuitem action="action_discount_limit"
            id="menu_discount_limit" 
            parent="sale.menu_sale_config"
            groups="base.group_system"
            sequence="50" />



        <!-- Product Pricelist View -->
        <record id="dl_product_pricelist_view_inherit" model="ir.ui.view">
            <field name="name">dl.pricelist.form.inherit</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='pricelist_settings']" position="inside">
                    <field name="is_public" groups="workshop.group_workshop_manager"/>
                </xpath>

            </field>
        </record>





</odoo>