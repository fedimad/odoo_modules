<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

       <!--Account purchase: Form-->
       <record model="ir.ui.view" id="purchase_order_dz">
           <field name="name">purchase order view form dz</field>
           <field name="model">purchase.order</field>
           <field name="inherit_id" ref="purchase.purchase_order_form"/>
           <field name="arch" type="xml">


                 <field name="tax_totals_json" position="replace">
                 </field>

                <xpath expr="//field[@name='notes']" position="replace">
                </xpath>


                <xpath expr="//field[@name='order_line']" position="after">
                    <group name="note_group" col="6">
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            <field name="tax_totals_json" widget="account-tax-totals-field" nolabel="1" colspan="2"/>
                        </group>

                        <group colspan="4">
                            <field name="notes" class="oe-bordered-editor" nolabel="1" placeholder="Terms and conditions..."/>
                        </group>
                        <div class="oe_clear"/>
                    </group>

                </xpath>

            </field>
       </record>



       <!--Account sale: Form-->
       <record model="ir.ui.view" id="sale_order_dz">
           <field name="name">sale order view form dz</field>
           <field name="model">sale.order</field>
           <field name="inherit_id" ref="sale.view_order_form"/>
           <field name="arch" type="xml">
                 <field name="payment_term_id" position="after">
                     <field name="payment_type" invisible="1"/>
                 </field>

                <xpath expr="//group[@name='note_group']" position="replace">
                    <group name="note_group" col="6">
                        <group name="discount" colspan="2">
                            <field name="discount_type"/>
                            <field name="discount_rate"/>
                        </group>

                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            <field name="tax_totals_json" widget="account-tax-totals-field" nolabel="1" colspan="2"/>
                        </group>

                        <group colspan="4">
                            <field name="note" class="oe-bordered-editor" nolabel="1" placeholder="Terms and conditions..."/>
                        </group>
                        <div class="oe_clear"/>
                    </group>

                </xpath>
            </field>
       </record>

